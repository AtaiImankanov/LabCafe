   <div>

      <strong id="nameCom">Name</strong><br />

       <input asp-for="UserName" />

       <span asp-validation-for="UserName"></span>

   </div>

    <div>

       <strong><label asp-for="PhoneNumber"></label></strong><br/>

       <input asp-for="PhoneNumber" />

       <span asp-validation-for="PhoneNumber"></span>

   </div>

   
    <div>

       <strong><label asp-for="Avatar"></label></strong><br />

       <input id="ava" asp-for="Avatar" />

       <span asp-validation-for="Avatar"></span>

   </div>

   <div>
       <strong><label asp-for="Email"></label></strong><br />
       <input asp-for="Email" />
       <span asp-validation-for="Email"></span>
   </div>


   <div>

       <strong><label asp-for="Password"></label></strong><br />

       <input asp-for="Password" />

       <span asp-validation-for="Password"></span>

   </div>

   <div>

       <strong><label asp-for="ConfirmPassword"></label></strong><br />

       <input asp-for="ConfirmPassword" />

       <span asp-validation-for="ConfirmPassword"></span>

   </div>
   <div>

       <input type="submit" value="Регистрация" />

   </div>

</form>

@section Scripts

{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>

           $('#companyAj').on('click',function (event) {
               $('#nameCom').html("Company Name");
           });
           $('#workerAj').on('click',function (event) {   
               $('#nameCom').html("Worker Name");
           });

    </script>
