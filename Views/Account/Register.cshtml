@model homework_64_Atai.ViewModels.RegisterViewModel

<h2>Регистрация нового пользователя</h2>

<form method="post" asp-controller="Account" asp-action="Register">

   <div asp-validation-summary="ModelOnly"></div>

   <div>
       <input asp-for="Role" type="radio" id="workerAj" value="worker" checked>
     
    <label asp-for="Role">Worker</label>
   </div>
   <div>
       <input asp-for="Role" type="radio" id="companyAj" value="company">
    <label asp-for="Role">Company</label>
   </div>
